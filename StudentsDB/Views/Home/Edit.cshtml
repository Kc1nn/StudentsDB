@model StudentsDB.Models.GroupModels.Group
 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2>Редактирование группы</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">Название</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Year">Год</label><br />
        <input type="number" asp-for="Year" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>